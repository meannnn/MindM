# 阿里云百炼API配置
# 请将下面的值替换为您的实际API密钥

# 阿里云百炼API密钥
# 获取方式：登录阿里云控制台 -> 百炼 -> API密钥管理
DASHSCOPE_API_KEY=sk-b75727ba0e4e4c76aaa91d536f4b7a0a

# 可选配置
# API请求超时时间（秒）
API_TIMEOUT=60

# 最大重试次数
MAX_RETRIES=3

# 默认输出目录
DEFAULT_OUTPUT_DIR=./outputs

# 端口配置
# 默认端口（如果被占用会自动查找可用端口）
PORT=5000

# 端口范围（动态端口查找范围）
PORT_RANGE_START=5000
PORT_RANGE_END=5100

# 自动打开浏览器
AUTO_OPEN_BROWSER=true

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 是否启用文件日志
ENABLE_FILE_LOGGING=true

# 日志文件路径
LOG_FILE=./logs/llm.log

# AI模型参数配置
# 模型名称 (qwen-max, qwen-plus, qwen-turbo, qwen-long等)
DEFAULT_MODEL=qwen-max

# 温度参数 (0.0-1.0，控制回答的随机性)
TEMPERATURE=0.7

# Top-p参数 (0.0-1.0，控制回答的多样性)
TOP_P=0.8

# 最大生成token数
MAX_TOKENS=2000

# 文件上传配置
# 文件上传用途 (file-extract, fine-tune等)
FILE_PURPOSE=file-extract

# 支持的文件类型
SUPPORTED_FILE_TYPES=.docx,.doc,.pdf,.txt