# AI文档助手 - 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 阿里云百炼API配置
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# AI模型配置
DEFAULT_MODEL=qwen-long
TEMPERATURE=0.7
TOP_P=0.8
MAX_TOKENS=4000

# 应用配置
LOG_LEVEL=DEBUG
LOG_FILE=./logs/app.log
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=false
PORT=5000

# 文件处理配置
MAX_CONTENT_LENGTH=16777216
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

# API请求配置
API_TIMEOUT=120
MAX_RETRIES=3

# 浏览器自动打开配置
AUTO_OPEN_BROWSER=true
PORT_RANGE_START=5000
PORT_RANGE_END=5100


